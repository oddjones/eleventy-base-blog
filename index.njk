  <script>
  //domready
  $(document).ready(function(){
    //append a div to each of the case studies' child articles giving the ordinal position of that li
    $('.caseStudy').each(function(index){
      //if index is less than 10 add a leading zero
      if(index<9){
        index = '0'+(index+1)
      }else{index = index+1}
      $(this).find('article').prepend('<div class="caseStudyNumber" aria-hidden="true">'+(index)+'</div>')
    })

  })
  </script>
