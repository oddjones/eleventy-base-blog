          <article>
            <h3>{{ caseStudy.data.title }}</h3>
            <p>{{ caseStudy.data.content }}</p>
          </article>
          <aside>
            <img
              src="/img/{{ caseStudy.data.img }}"
              alt="{{ caseStudy.data.img }}"
            />
            <span class="when">{{ caseStudy.data.period }}</span>
          </aside>

      </li>
